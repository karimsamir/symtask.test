{% extends 'base.html.twig' %}

{% block title %}All surveys!{% endblock %}

{% block body %}
<table class="table table-hover">

  <thead>
    <tr>
      <th scope="col">Servey Type</th>
      <th scope="col">ِِAction</th>
    </tr>
  </thead>
  <tbody>
    {% for quiz in quizes %}
    <tr>
      {# <th scope="row">Default</th> #}
      <td>{{ quiz.name }}</td>
      <td>
        {% if (doneQuizes[quiz.id] is defined) %}
        Done
        {% else %}
        <a href="{{ path("quiz_detail", {id: quiz.id}) }}">Start servey</a>

        {% endif %}
      </td>

    </tr>

    {% endfor %}

  </tbody>
</table>

{% endblock %}